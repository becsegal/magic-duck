  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r", "register-ts-node",
        "-f", "Acceptance: ember-cli-typescript generator",
        "-f", "basic app",
        "-t", "1000000",
        "ts/tests/**/*.{ts,js}"
